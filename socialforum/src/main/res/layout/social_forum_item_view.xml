<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#242A37"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/title_image_demo"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:id="@+id/title_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/image_demo"
            android:layout_marginTop="15dp"
            android:id="@+id/main_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time_text"
            app:layout_constraintHeight_max="200dp"
            android:layout_height="wrap_content" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:id="@+id/name_text"
            android:background="#242A37"
            android:textSize="13dp"
            android:text="Joel Jacobs"
            android:layout_marginTop="13dp"
            android:textColor="#FFFFFF"
            android:lines="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_image"
            app:layout_constraintBottom_toBottomOf="@+id/title_image"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/time_text"
            android:background="#242A37"
            android:text="2 hours ago"
            android:textSize="13dp"
            android:textColor="#4E586E"
            android:lines="1"
            app:layout_constraintBottom_toBottomOf="@+id/title_image"
            app:layout_constraintTop_toBottomOf="@+id/name_text"
            app:layout_constraintEnd_toEndOf="@+id/name_text"
            app:layout_constraintStart_toStartOf="@+id/name_text" />


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/main_text"
            android:textSize="15dp"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:maxLines="4"
            android:text="_Icons _ 8 Like.png_Icons _ 8 Like.png_Icons _ 8 Like.png_Icons _ 8 Like.png_Icons _ 8 Like.png_Icons _ 8 Like.png_Icons _ 8 Like.png_Icons _ 8 Like.png_Icons _ 8 Like.png_Icons _ 8 Like.png"
            app:layout_constraintTop_toBottomOf="@id/text_second"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/text_second"
            android:textSize="15dp"
            android:textColor="#F54B64"
            android:text="#relax, #travel"
            app:layout_constraintTop_toBottomOf="@id/main_image"
            app:layout_constraintStart_toStartOf="parent" />

    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_like"
            android:layout_marginStart="8dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/main_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/icon_like" />

    <TextView
            android:layout_width="wrap_content"
            android:text="1125"
            android:id="@+id/likes_text"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="4dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@+id/icon_like"
            app:layout_constraintBottom_toBottomOf="@+id/icon_like"
            app:layout_constraintTop_toTopOf="@+id/icon_like" />

    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_message"
            android:layout_marginStart="22dp"
            app:layout_constraintStart_toEndOf="@id/likes_text"
            app:layout_constraintBottom_toBottomOf="@+id/icon_like"
            android:id="@+id/icon_message"
            app:layout_constraintTop_toTopOf="@+id/icon_like" />

    <TextView
            android:layout_width="wrap_content"
            android:text="1125"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="4dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@+id/icon_message"
            app:layout_constraintBottom_toBottomOf="@+id/icon_message"
            app:layout_constraintTop_toTopOf="@+id/icon_message" />


</androidx.constraintlayout.widget.ConstraintLayout>
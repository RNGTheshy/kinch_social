<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="radius" format="dimension" />
    <attr name="innerRadius" format="dimension" />

    <declare-styleable name="RoundImageView">
        <attr name="radius" />
        <attr name="innerRadius" />
    </declare-styleable>

    <declare-styleable name="TagView">
        <attr name="defaultTagColor" format="color|reference" />
        <attr name="defaultBold" format="boolean" />
        <attr name="defaultTextSize" format="dimension|reference" />
        <attr name="defaultTagBgColor" format="color|reference" />
        <attr name="horizontalSpace" format="dimension|reference" />
        <attr name="verticalSpace" format="dimension|reference" />
        <attr name="tagDefaultPaddingLeft" format="dimension|reference" />
        <attr name="tagDefaultPaddingRight" format="dimension|reference" />
        <attr name="tagDefaultPaddingTop" format="dimension|reference" />
        <attr name="tagDefaultPaddingBottom" format="dimension|reference" />
        <attr name="tagAlign">
            <enum name="TOP" value="1"/>
            <enum name="CENTER" value="0"/>
            <enum name="BOTTOM" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="SelectableStyleItem">
        <attr name="overlaySelectBox" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RandomRoundImageView">
        <attr name="leftTopCorner" format="dimension" />
        <attr name="rightTopCorner" format="dimension" />
        <attr name="rightBottomCorner" format="dimension" />
        <attr name="leftBottomCorner" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleIndicator">
        <attr format="color" name="normal_color" />
        <attr format="color" name="selected_color" />
        <attr format="dimension" name="item_margin" />
        <attr name="radius" />
    </declare-styleable>

    <declare-styleable name="CommonTitleBar">
        <attr name="defaultLeftIcon" format="color|reference" />
        <attr name="defaultTitleTextBold" format="boolean" />
        <attr name="defaultTitleTextSize" format="dimension|reference" />
        <attr name="defaultTitleTextColor" format="color|reference" />
        <attr name="defaultTitleText" format="reference" />
        <attr name="defaultTitleTextVisible" format="boolean" />
        <attr format="boolean" name="defaultBottomLineVisible" />
        <attr format="integer" name="defaultTitleMaxEms" />
    </declare-styleable>

    <declare-styleable name="MultipleSeekbar">
        <attr name="max" format="integer" />
        <attr name="startProgress" format="integer" />
        <attr name="endProgress" format="integer" />
        <attr name="startThumb" format="reference" />
        <attr name="endThumb" format="reference" />
        <attr name="backgroundProgressDrawable" format="reference" />
        <attr name="startProgressDrawable" format="reference" />
        <attr name="endProgressDrawable" format="reference" />
    </declare-styleable>
</resources>
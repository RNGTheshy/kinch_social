    <TextView
        android:id="@+id/chat_history_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/chat_history_name"
        android:layout_width="wrap_content"
        android:maxWidth="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="I am"
        android:layout_marginLeft="10dp"
        android:textColor="@color/lcim_common_gray"
        android:textSize="@dimen/text_small_size"
        app:layout_constraintBottom_toTopOf="@+id/chat_history_avatar"
        app:layout_constraintStart_toEndOf="@+id/chat_history_avatar" />

    <ImageView
        android:id="@+id/chat_history_avatar"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/chat_history_time" />

    <TextView
        android:id="@+id/chat_history_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/chat_history_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chat_history_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>